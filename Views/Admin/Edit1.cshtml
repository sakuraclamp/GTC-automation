@model test.Models.login

@{
    if (Session["UserId"] == null)
    {

        Response.Redirect("~/Login");

    }
    else if ((string)Session["username"] != "admin")
    {
        Response.Redirect("~/Login");
    }
    ViewBag.Title = "Düzenle";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

    <title>Şifre Düzenle</title>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Düzenle</h4>
        <hr />
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <!-- left column -->
                    <div class="col-md-6">
                        <!-- general form elements -->
                        <div class="card card-cyan">
                            <div class="card-header">
                                <h3 class="card-title"></h3>
                            </div>
                            <!-- /.card-header -->
                            <!-- form start -->
                            <form role="form">
                                <div class="card-body">

                                    @Html.HiddenFor(model => model.name)

                                    <div class="form-group">
                                        <label>Kullanıcı Adı:</label>
                                        <input type="text" class="form-control" placeholder="@Html.DisplayFor(model => model.name)" disabled="disabled">
                                    </div>
                                    <div class="form-group">
                                        <label>Şifre:</label>
                                        <div class="">
                                            @Html.EditorFor(model => model.pass, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.pass, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    @Html.HiddenFor(model => model.status)
                                    @Html.HiddenFor(model => model.ad)
                                    @Html.HiddenFor(model => model.soyad)
                                    <div class=" float-right">
                                        <a href="@Url.Action("Edit","Admin", new { Model.id})" class="btn btn-app">
                                            <i class="fas fa fa-backward"></i><b>Geri Dön</b>
                                        </a>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-10">
                                            <input type="submit" value="Kaydet" class="btn btn-info " />
                                        </div>
                                    </div>

                                </div>

                            </form>
                        </div>
                    </div>
                </div>
                <!-- /.row -->
            </div><!-- /.container-fluid -->
        </section>
    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
