@model test.Models.tedarikci
@{
    if (Session["UserId"] == null)
    {
        Response.Redirect("~/Login");
    }
    else if ((int)Session["status"] == 1)
    {
        Response.Redirect("~/Login");
    }
    ViewBag.Title = "Tedarikciekle";
}
<title>Tedarikci Ekle</title>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">

        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <!-- left column -->
                    <div class="col-md-6">
                        <!-- general form elements -->
                        <div class="card card-blue">
                            <div class="card-header">
                                <h3 class="card-title"></h3>
                            </div>
                            <!-- /.card-header -->
                            <!-- form start -->
                            <form role="form">
                                <div class="card-body">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="form-group">
                                        <div class="col-md-10">
                                            <label class="">Tedarikçi Firma Adı:</label>
                                            @Html.EditorFor(model => model.firma, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.firma, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-10">
                                            <label class="">Adres:</label>
                                            @Html.EditorFor(model => model.adres, new { htmlAttributes = new { @class = "form-control", maxlength = "50" } })
                                            @Html.ValidationMessageFor(model => model.adres, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-10">
                                            <label class="">Telefon:</label>
                                            @Html.EditorFor(model => model.telefon, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.telefon, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-10">
                                            <label class="">İlgili Kişi:</label>
                                            @Html.EditorFor(model => model.ilgilisi, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.ilgilisi, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-md-10">
                                        <label class="text-success">@ViewBag.basarili</label>
                                        <label class="text-da text-danger">@ViewBag.kullanıvar</label>
                                    </div>
                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-10">
                                            <input type="submit" value="Kaydet" class="btn btn-primary" />
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <!-- /.row -->
            </div><!-- /.container-fluid -->
        </section>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
