@model test.Models.yetki
@{ 
    if ((string)Session["username"] != "admin")
    {
        Response.Redirect("~/Login");
    }
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <h4>Kullanıcı Ekle</h4>
        <hr />
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <!-- left column -->
                    <div class="col-md-4">
                        <!-- general form elements -->
                        <div class="card card-cyan">
                            <div class="card-header">
                                <h3 class="card-title"></h3>
                            </div>
                            <!-- /.card-header -->
                            <!-- form start -->
                            <form role="form">
                                <div class="card-body">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    <div class="form-group">
                                        <div class="col-md-10">
                                            <label class="">Yetki Adı:</label>
                                            @Html.EditorFor(model => model.stat, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.stat, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <label class="text-da text-danger">@ViewBag.uyari</label>
                                    <div class="form-group">
                                        <div class="col-md-offset-2 col-md-10">
                                            <input type="submit" value="Kaydet" class="btn btn-info" />
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <!-- /.row -->
            </div><!-- /.container-fluid -->
        </section>
    </div>
}

