<aside class="main-sidebar sidebar-light-yellow elevation-4" style="font-size:14px">
    <!-- Brand Logo -->
    <div class="brand-link">
        <img src="~/Content/Admin/dist/img/scanner.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3"
             style="opacity: .8">
        <a href="~/Finger"><span class="brand-text font-weight-light"><font size="4" style="color:darkcyan;"><b>Parmak İzi</b></font></span></a>
    </div>
    <!-- Sidebar -->
    <div class="sidebar">
        <!-- Sidebar user panel (optional) -->
        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="image">
                @{
                    if (Session["status"] != null)
                    {
                        if ((int)Session["status"] == 0)
                        {
                            <img src="~/Content/Admin/dist/img/avatar04.png" class="img-circle elevation-2" alt="User Image">
                        }
                        else if ((int)Session["status"] == 2)
                        {
                            <img src="~/Content/Admin/dist/img/user_1.png" class="img-circle elevation-2" alt="User Image">
                        }
                        else
                        {
                            <img src="~/Content/Admin/dist/img/user_2.png" class="img-circle elevation-2" alt="User Image">
                        }
                    }
                }
            </div>
            <div class="info">
                <div class="d-block"><font color="Black" size="4">Hoşgeldin &nbsp;</font><a href="~/Finger"><font color="orange" size="4">  @Session["username"]</font></a></div>
            </div>
        </div>
        <!-- Sidebar Menu -->
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                <!-- Add icons to the links using the .nav-icon class
    with font-awesome or any other icon font library -->
                <li class="nav-item has-treeview menu-open">
                    <a href="#" class="nav-link active">
                        <i class="nav-icon fas fa-fingerprint"></i>
                        <p>
                            Parmak izi
                            <i class="right fas fa-angle-left"></i>
                        </p>
                    </a>
                    <ul class="nav nav-treeview">
                        <li class="nav-item">
                            <a href="~/Finger/Giriscikis" class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Giriscikis" ? "active" : "")">
                                <i class="nav-icon fas fa-exchange-alt"></i>
                                <p>Giriş-Çıkış</p>
                            </a>
                        </li>
                        <li class="nav-item ">
                            <a href="~/Finger/Puandaj" class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Stoklistele" ? "active" : "")">
                                <i class="nav-icon fas fa-clipboard"></i>
                                <p>Aylık Puantaj</p>
                            </a>
                        </li>
     

                            <li class="nav-item ">
                                <a href="~/Finger/Aktar" class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Aktar" ? "active" : "")">
                                    <i class="nav-icon fas fa-file-import"></i>
                                    <p>İçe Aktar</p>
                                </a>
                            </li>

                    </ul>
                </li>

                <li class="nav-item has-treeview menu-open">
                    <a href="#" class="nav-link active">
                        <i class="nav-icon fas fa-user-tie"></i>
                        <p>
                            Personel İşlemleri
                            <i class="right fas fa-angle-left"></i>
                        </p>
                    </a>
                    <ul class="nav nav-treeview">
                        @{
                            if ((string)Session["statusname"] == "Admin" || (string)Session["statusname"] == "Master")
                            {
                                <li class="nav-item">
                                    <a href="~/Finger/Personelekle" class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Personelekle" ? "active" : "")">
                                        <i class="far fa fa-user-plus nav-icon"></i>
                                        <p>Personel Ekle</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="@Url.Action("Personellistele", "Finger")" class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Personellistele" ? "active" : "")">
                                        <i class="far fa-address-card nav-icon "></i>
                                        <p>Personel Listesi</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="@Url.Action("Cikanlar", "Finger")" class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Cikanlar" ? "active" : "")">
                                        <i class="fas fa-child nav-icon "></i>
                                        <p>İşten Ayrılanlar</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="@Url.Action("Ekle", "Finger")" class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "Ekle" ? "active" : "")">
                                        <i class="fas fa-car-battery nav-icon "></i>
                                        <p>Ekle</p>
                                    </a>
                                </li>
                            }
                        }
                    </ul>

                </li>

                <li class="nav-item has-treeview menu-open">
                    <a href="#" class="nav-link active">
                        <i class="nav-icon fas fa fa-user"></i>
                        <p>
                            Kullanıcı
                            <i class="right fas fa-angle-left"></i>
                        </p>
                    </a>
                    <ul class="nav nav-treeview">
                        <li class="nav-item">
                            <a href="@Url.Action("profil", "Finger",new {name=Session["username"]})" class="nav-link @(ViewContext.RouteData.Values["Action"].ToString() == "profil" ? "active" : "")">
                                <i class="far fa fa-cogs nav-icon"></i>
                                <p>Kullanıcı Ayarı</p>
                            </a>
                        </li>
                    </ul>
                <li class="nav-item">
                    <a href="@Url.Action("Logout", "Login")" class="nav-link">
                        <i class="far fa fa-sign-out nav-icon"></i>
                        <p><font color="red"><b>Çıkış</b> </font></p>
                    </a>
                </li>
                </ul>
                
</nav>
        <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
</aside>