@model test.Models.personel
@{
    if (Session["statusname"] == null)
    {
        Response.Redirect("~/Login");
    }
    Layout = "~/Views/Shared/_Layout3.cshtml";
}
<title>Çıkış</title>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <form>
        <div class="row">
            <!-- left -->
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header p-0">
                        <ul class="nav nav-pills">
                            <li class=" nav-link"><label>Çıkış Yap</label></li>
                        </ul>
                    </div><!-- /.card-header -->
                    <div class="card-body">
                        <div class="tab-pane" id="settings">
                            <div class="form-horizontal" style="font-size:14px">

                                <div class="input-group input-group-sm">
                                    <label class="col-sm-4 col-form-label">Adı</label>
                                    <div class="col-sm-8">
                                        <input type="text" style="font-size:16px; font-weight:bold" class="form-control form-control-sm" placeholder="@Html.DisplayFor(model => model.personelgenel.ad)" disabled="disabled">
                                    </div>
                                </div>
                                <div class="input-group input-group-sm">
                                    <label class="col-sm-4 col-form-label">Soyadı</label>
                                    <div class="col-sm-8">
                                        <input type="text" style="font-size:16px; font-weight:bold" class="form-control form-control-sm" placeholder="@Html.DisplayFor(model => model.personelgenel.soyad)" disabled="disabled">
                                    </div>
                                </div>
                                <div class="input-group input-group-sm">
                                    <label class="col-sm-4 col-form-label">Plaka</label>
                                    <div class="col-sm-8">
                                        <input type="text" style="font-size:16px; font-weight:bold" class="form-control form-control-sm" placeholder="@Html.DisplayFor(model => model.plaka)" disabled="disabled">
                                    </div>
                                </div>
                                <div class="input-group input-group-sm">
                                    <label class="col-sm-4 col-form-label">Ziyaret Sebebi</label>
                                    <div class="col-sm-8">
                                        <input type="text" style="font-size:16px; font-weight:bold" class="form-control form-control-sm" placeholder="@Html.DisplayFor(model => model.sebep)" disabled="disabled">
                                    </div>
                                </div>
                                <div class="input-group input-group-sm">
                                    <label class="col-sm-4 col-form-label">Giriş</label>
                                    <div class="col-sm-8">
                                        <input type="text" style="font-size:16px; font-weight:bold" class="form-control form-control-sm" placeholder="@Html.DisplayFor(model => model.giris)" disabled="disabled">
                                    </div>
                                </div>

                                <div class="input-group input-group-sm">
                                    <label class="col-sm-4 col-form-label">Çıkış</label>
                                    <div class="col-sm-8">
                                        <input type="datetime-local" name="cikis" max="2030-06-14T00:00" class="form-control form-control-sm" value="@DateTime.Now.ToString("yyyy-MM-dd HH:mm").Replace(' ','T')" />

                                    </div>
                                </div>
                                <br />
                                <div class="input-group input-group-sm">
                                    <label class="col-sm-4 col-md-offset-2">
                                        <input type="submit" value="Kaydet" class="btn btn-info ">
                                    </label>
                                    <div class="col-sm-8" style="text-align:right">
                                        <a class="btn btn-danger btn-sm" href="@Url.Action("Personellistesi")">
                                            <i class="fas fa-angle-double-left"></i>
                                            Geri Dön
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- /.tab-pane -->
                        <!-- /.tab-content -->
                    </div><!-- /.card-body -->
                </div>
                <!-- /.nav-tabs-custom -->
            </div>
        </div>
    </form>

}




<script>
    $(function () {
        //Initialize Select2 Elements
        $('.select2').select2()
    })
</script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
