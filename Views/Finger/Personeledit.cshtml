@model test.Models.personelgenel
@{
    if ((string)Session["statusname"] != "Admin")
    {
        if ((string)Session["statusname"] != "Master")
        {
            Response.Redirect("~/Login");
        }
    }
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
@using (Html.BeginForm("Personeledit", "Finger", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <form>
        <div class="row">
            <!-- left -->
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header p-0">
                        <ul class="nav nav-pills">
                            <li class=" nav-link"><label>Genel Bilgiler</label></li>
                        </ul>
                    </div><!-- /.card-header -->
                    <div class="row">
                        <div class="card-body">
                            <div class="tab-pane" id="settings">
                                <div class="form-horizontal" style="font-size:14px">
                                    @Html.HiddenFor(model => model.isdisable)
                                    @Html.HiddenFor(model => model.kart_no)
                                    <div class="input-group input-group-sm">
                                        <label class="col-sm-4 col-form-label">Kart ID:</label>
                                        <div class="col-sm-8">
                                            @Html.TextBoxFor(Model => Model.kart_no, new { @class = "form-control form-control-sm" })
                                            @Html.ValidationMessageFor(model => model.kart_no, "", new { @class = "text-danger" })
                                            <text style="color:red;font-size:14px">@ViewBag.hata</text>
                                        </div>
                                    </div>
                                    <div class="input-group input-group-sm">
                                        <label class="col-sm-4 col-form-label">Adı:</label>
                                        <div class="col-sm-8">
                                            @Html.EditorFor(model => model.ad, new { htmlAttributes = new { @class = "form-control form-control-sm" } })

                                        </div>
                                    </div>
                                    <div class="input-group input-group-sm">
                                        <label class="col-sm-4 col-form-label">Soyadı:</label>
                                        <div class="col-sm-8">
                                            @Html.EditorFor(model => model.soyad, new { htmlAttributes = new { @class = "form-control form-control-sm" } })

                                        </div>
                                    </div>
                                    <div class="input-group input-group-sm">
                                        <label class="col-sm-4 col-form-label">Telefon:</label>
                                        <div class="col-sm-8">
                                            @Html.EditorFor(model => model.telefon, new { htmlAttributes = new { @class = "form-control form-control-sm" } })

                                        </div>
                                    </div>
                                    <div class="input-group input-group-sm">
                                        <label class="col-sm-4 col-form-label">Grup:</label>
                                        <div class="col-sm-8">
                                            @Html.DropDownList("grup_id", (IEnumerable<SelectListItem>)ViewBag.grup_id, new { @class = "form-control select2 form-control-sm" })
                                        </div>
                                    </div>
                                    <div class="input-group input-group-sm">
                                        <label class="col-sm-4 col-form-label">Bölüm:</label>
                                        <div class="col-sm-8">
                                            @Html.DropDownList("bolum_id", (IEnumerable<SelectListItem>)ViewBag.bolum_id, new { @class = "form-control select2 form-control-sm" })
                                        </div>
                                    </div>
                                    <div class="input-group input-group-sm">
                                        <label class="col-sm-4 col-form-label">Görev:</label>
                                        <div class="col-sm-8">
                                            @Html.DropDownList("gorev_id", (IEnumerable<SelectListItem>)ViewBag.gorev_id, new { @class = "form-control select2 form-control-sm" })
                                        </div>
                                    </div>
                                    <div class="input-group input-group-sm">
                                        <label class="col-sm-4 col-form-label">Eğitim:</label>
                                        <div class="col-sm-8">
                                            @Html.DropDownList("egitim_id", (IEnumerable<SelectListItem>)ViewBag.egitim_id, new { @class = "form-control select2 form-control-sm" })
                                        </div>
                                    </div>
                                    <div class="input-group input-group-sm">
                                        <label class="col-sm-4 col-form-label">Hesap No:</label>
                                        <div class="col-sm-8">
                                            @Html.EditorFor(model => model.bankahesapno, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                                        </div>
                                    </div>
                                    <div class="input-group input-group-sm">
                                        <label class="col-sm-4 col-form-label">İşe Başlama Tarihi:</label>
                                        <div class="col-sm-8">
                                            @Html.TextBoxFor(model => model.baslamatarihi, "{0:yyyy-MM-dd}", new { type = "date", @class = "form-control select2 form-control-sm" })
                                            @Html.ValidationMessageFor(model => model.baslamatarihi, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="input-group input-group-sm">
                                        <label for="inputEmail3" class="col-sm-4 col-form-label">Resmi İşe Başlama:</label>
                                        <div class="col-sm-8">
                                            @Html.TextBoxFor(model => model.resmibaslamatarihi, "{0:yyyy-MM-dd}", new { type = "date", @class = "form-control select2 form-control-sm" })
                                            @Html.ValidationMessageFor(model => model.resmibaslamatarihi, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <br />
                                    <br />
                                    <div class="input-group input-group-sm">
                                        <label class="col-sm-4 col-md-offset-2">
                                            <input type="submit" value="Kaydet" class="btn btn-info ">
                                        </label>
                                        <div class="col-sm-8" style="text-align:right">
                                            <a class="btn btn-danger btn-sm" href="@Url.Action("Personellistele")">
                                                <i class="fas fa-angle-double-left"></i>
                                                Geri Dön
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- /.tab-pane -->
                            <!-- /.tab-content -->
                        </div><!-- /.card-body -->

                    </div>

                </div>

            </div>
            <!-- right -->
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header p-0">
                        <ul class="nav nav-pills">
                            <li class=" nav-link"><label>Kişisel Bilgiler</label></li>
                        </ul>
                    </div><!-- /.card-header -->
                    <div class="row">
                        <div class="card-body">
                            <div class="tab-pane" id="settings">
                                <div class="form-horizontal" style="font-size:14px">
                                    <div class="input-group input-group-sm">
                                        <label class="col-sm-3 col-form-label">Personel Resim</label>
                                        <div class="col-sm-8">
                                            @{
                                                if (Model.image == null)
                                                {
                                                    <img class="profile-user-img img-fluid img-bordered" src="~/Content/images/no-image-available.png" alt="User profile picture" style="max-height:120px;width:auto">
                                                }
                                                else
                                                {
                                                    <img class="profile-user-img img-fluid img-bordered" src="~/Content/images/@Model.image" alt="User profile picture" style="max-height:120px;width:auto">
                                                }
                                            }
                                        </div>
                                    </div>
                                    <div class="input-group input-group-sm">
                                        <label class="col-sm-3 col-form-label">Resim Seç</label>
                                        <div class="col-sm-8">
                                            <div class="input-group">
                                                <div class="custom-file">
                                                    <input type="file" name="file" value="Resim Seç" id="file">

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="input-group input-group-sm">
                                        <label class="col-sm-3 col-form-label">T.C</label>
                                        <div class="col-sm-8">
                                            @Html.TextBoxFor(Model => Model.tc, new { @class = "form-control form-control-sm" })
                                            @Html.ValidationMessageFor(model => model.tc, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="input-group input-group-sm">
                                        <label class="col-sm-3 col-form-label">Anne Adı</label>
                                        <div class="col-sm-8">
                                            @Html.TextBoxFor(Model => Model.anaadi, new { @class = "form-control form-control-sm" })
                                        </div>
                                    </div>
                                    <div class="input-group input-group-sm">
                                        <label class="col-sm-3 col-form-label">Baba Adı</label>
                                        <div class="col-sm-8">
                                            @Html.TextBoxFor(Model => Model.babaadi, new { @class = "form-control form-control-sm" })
                                        </div>
                                    </div>
                                    <div class="input-group input-group-sm">
                                        <label class="col-sm-3 col-form-label">Kimlik Seri No</label>
                                        <div class="col-sm-8">
                                            @Html.TextBoxFor(Model => Model.serino, new { @class = "form-control form-control-sm" })
                                        </div>
                                    </div>
                                    <div class="input-group input-group-sm">
                                        <label class="col-sm-3 col-form-label">Doğum Tarih</label>
                                        <div class="col-sm-8 ">
                                            @Html.TextBoxFor(model => model.dogumtarih, "{0:yyyy-MM-dd}", new { type = "date", @class = "form-control select2 form-control-sm" })
                                            <span class="input-group-addon">
                                                <span class="glyphicon glyphicon-calendar"></span>
                                            </span>
                                        </div>
                                    </div>
                                    <div class="input-group input-group-sm">
                                        <label class="col-sm-3 col-form-label">Medeni Hali</label>
                                        <div class="col-sm-8">
                                            @Html.DropDownList("medenihali_id", (IEnumerable<SelectListItem>)ViewBag.medenihali_id, new { @class = "form-control select2 form-control-sm" })
                                        </div>
                                    </div>
                                    <div class="input-group input-group-sm">
                                        <label class="col-sm-3 col-form-label">Kan Grubu</label>
                                        <div class="col-sm-8">
                                            @Html.DropDownList("kangrubu_id", (IEnumerable<SelectListItem>)ViewBag.kangrubu_id, new { @class = "form-control select2 form-control-sm" })
                                        </div>
                                    </div>
                                    <div class="input-group input-group-sm">
                                        <label class="col-sm-3 col-form-label">Cinsiyet</label>
                                        <div class="col-sm-8">
                                            @Html.DropDownList("cinsiyet_id", (IEnumerable<SelectListItem>)ViewBag.cinsiyet_id, new { @class = "form-control select2 form-control-sm" })
                                        </div>
                                    </div>
                                    <div class="input-group input-group-sm">
                                        <label for="inputName" class="col-sm-3 col-form-label">Elbise Beden</label>
                                        <div class="col-sm-8">
                                            @Html.TextBoxFor(Model => Model.elbisebeden, new { @class = "form-control form-control-sm" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- /.tab-pane -->
                            <!-- /.tab-content -->
                        </div><!-- /.card-body -->
                    </div>
                </div>
            </div>
        </div>


    </form>
}
<script>
    $(function () {
        //Initialize Select2 Elements
        $('.select2').select2();
    })

</script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}