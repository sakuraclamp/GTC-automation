@model test.Models.personelgenel
@{
    if ((string)Session["statusname"] != "Admin")
    {
        if ((string)Session["statusname"] != "Master")
        {
            Response.Redirect("~/Login");
        }
    }
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
@using (Html.BeginForm())
{
    <form>
        <div class="row">
            <!-- left -->
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header p-0">
                        <ul class="nav nav-pills">
                            <li class=" nav-link"><label>Genel Personel Bilgileri</label></li>
                        </ul>
                    </div><!-- /.card-header -->
                    @Html.HiddenFor(model => model.kart_no)
                    <div class="card-body">
                        <div class="tab-pane" id="settings">
                            <div class="form-horizontal" style="font-size:14px">
                                <div class="input-group input-group-sm">
                                    <label class="col-sm-4 col-form-label">Kart ID</label>
                                    <div class="col-sm-8">
                                        <input type="text" style="font-size:16px; font-weight:bold" class="form-control form-control-sm " placeholder="@Html.DisplayFor(model => model.kart_no)" disabled="disabled">
                                    </div>
                                </div>
                                <div class="input-group input-group-sm">
                                    <label class="col-sm-4 col-form-label">Adı</label>
                                    <div class="col-sm-8">
                                        <input type="text" style="font-size:16px; font-weight:bold" class="form-control form-control-sm" placeholder="@Html.DisplayFor(model => model.ad)" disabled="disabled">
                                    </div>
                                </div>
                                <div class="input-group input-group-sm">
                                    <label class="col-sm-4 col-form-label">Soyadı</label>
                                    <div class="col-sm-8">
                                        <input type="text" style="font-size:16px; font-weight:bold" class="form-control form-control-sm" placeholder="@Html.DisplayFor(model => model.soyad)" disabled="disabled">
                                    </div>
                                </div>
                                <div class="input-group input-group-sm">
                                    <label class="col-sm-4 col-form-label">Telefon</label>
                                    <div class="col-sm-8">
                                        <input type="text" style="font-size:16px; font-weight:bold" class="form-control form-control-sm" placeholder="@Html.DisplayFor(model => model.telefon)" disabled="disabled">
                                    </div>
                                </div>
                                <div class="input-group input-group-sm">
                                    <label class="col-sm-4 col-form-label">Grup</label>
                                    <div class="col-sm-8">
                                        <input type="text" style="font-size:16px; font-weight:bold" class="form-control form-control-sm" placeholder="@Html.DisplayFor(model => model.personelgrup.grupadi)" disabled="disabled">
                                    </div>
                                </div>
                                <div class="input-group input-group-sm">
                                    <label class="col-sm-4 col-form-label">Görev</label>
                                    <div class="col-sm-8">
                                        <input type="text" style="font-size:16px; font-weight:bold" class="form-control form-control-sm" placeholder="@Html.DisplayFor(model => model.personelgorev.gorevadi)" disabled="disabled">
                                    </div>
                                </div>
                                <div class="input-group input-group-sm">
                                    <label class="col-sm-4 col-form-label">Bölüm</label>
                                    <div class="col-sm-8">
                                        <input type="text" style="font-size:16px; font-weight:bold" class="form-control form-control-sm" placeholder="@Html.DisplayFor(model => model.personelbolum.blmadi)" disabled="disabled">
                                    </div>
                                </div>
                                <div class="input-group input-group-sm">
                                    <label class="col-sm-4 col-form-label">Eğitim</label>
                                    <div class="col-sm-8">
                                        <input type="text" style="font-size:16px; font-weight:bold" class="form-control form-control-sm" placeholder="@Html.DisplayFor(model => model.personelegitim.egitimadi)" disabled="disabled">
                                    </div>
                                </div>
                                <div class="input-group input-group-sm">
                                    <label class="col-sm-4 col-form-label">Hesap Numarası</label>
                                    <div class="col-sm-8">
                                        <input type="text" style="font-size:16px; font-weight:bold" class="form-control form-control-sm" placeholder="@Html.DisplayFor(model => model.bankahesapno)" disabled="disabled">
                                    </div>
                                </div>
                                <div class="input-group input-group-sm">
                                    <label class="col-sm-4 col-form-label">İşe Başlama Tarihi</label>
                                    <div class="col-sm-8">
                                        <input type="text" style="font-size:16px; font-weight:bold" class="form-control form-control-sm" placeholder="@Html.DisplayFor(model => model.baslamatarihi)" disabled="disabled">
                                    </div>
                                </div>
                                <div class="input-group input-group-sm">
                                    <label class="col-sm-4 col-form-label">Resmi İşe Başlama </label>
                                    <div class="col-sm-8">
                                        <input type="text" style="font-size:16px; font-weight:bold" class="form-control form-control-sm" placeholder="@Html.DisplayFor(model => model.resmibaslamatarihi)" disabled="disabled">
                                    </div>
                                </div>

                                <div class="input-group input-group-sm">
                                    <label for="inputName" class="col-sm-4 col-form-label">Çıkış Tarihi</label>
                                    <div class="col-sm-8">
                                        <input type="text" style="font-size:16px; font-weight:bold;background-color:aqua" class="form-control form-control-sm" placeholder="@Html.DisplayFor(model => model.cikistarihi)" disabled="disabled">
                                    </div>
                                </div>
                                <br />
                                <div class="input-group input-group-sm">
                                    <label class="col-sm-4">
                                        <input type="submit" class="btn btn-info" value="İşe Al" style="font-size:14px" />
                                    </label>
                                    <div class="col-sm-8" style="text-align:right">
                                        <a class="btn btn-danger btn-sm" href="@Url.Action("Cikanlar")">
                                            <i class="fas fa-angle-double-left"></i>
                                            Geri Dön
                                        </a>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <!-- /.tab-pane -->
                        <!-- /.tab-content -->
                    </div><!-- /.card-body -->
                </div>
                <!-- /.nav-tabs-custom -->
            </div>
            <!-- right -->
            <div class="col-md-6">

                <div class="card">
                    <div class="card-header p-0">
                        <ul class="nav nav-pills">
                            <li class=" nav-link"><label>Kişisel Bilgiler</label></li>
                        </ul>
                    </div><!-- /.card-header -->
                    <div class="card-body">
                        <div class="tab-pane" id="settings">
                            <div class="form-horizontal" style="font-size:14px">
                                <div class="input-group input-group-sm">
                                    <label class="col-sm-4 col-form-label">Personel Resim</label>
                                    <div class="col-sm-8">
                                        @{
                                            if (Model.image == null)
                                            {
                                                <img class="profile-user-img img-fluid img-bordered" src="~/Content/images/no-image-available.png" alt="User profile picture" style="max-height:130px;width:auto">
                                            }
                                            else
                                            {
                                                <img class="profile-user-img img-fluid img-bordered" src="~/Content/images/@Model.image" alt="User profile picture" style="max-height:130px;width:auto">
                                            }
                                        }
                                    </div>

                                </div>
                                <div class="input-group input-group-sm">
                                    <label for="inputName" class="col-sm-4 col-form-label">T.C</label>
                                    <div class="col-sm-8">
                                        <input type="text" style="font-size:16px; font-weight:bold" class="form-control form-control-sm" placeholder="@Html.DisplayFor(model => model.tc)" disabled="disabled">
                                    </div>
                                </div>
                                <div class="input-group input-group-sm">
                                    <label for="inputName" class="col-sm-4 col-form-label">Anne Adı</label>
                                    <div class="col-sm-8">
                                        <input type="text" style="font-size:16px; font-weight:bold" class="form-control form-control-sm" placeholder="@Html.DisplayFor(model => model.anaadi)" disabled="disabled">
                                    </div>
                                </div>
                                <div class="input-group input-group-sm">
                                    <label for="inputName" class="col-sm-4 col-form-label">Baba Adı</label>
                                    <div class="col-sm-8">
                                        <input type="text" style="font-size:16px; font-weight:bold" class="form-control form-control-sm" placeholder="@Html.DisplayFor(model => model.babaadi)" disabled="disabled">
                                    </div>
                                </div>
                                <div class="input-group input-group-sm">
                                    <label for="inputName" class="col-sm-4 col-form-label">Kimlik Seri No</label>
                                    <div class="col-sm-8">
                                        <input type="text" style="font-size:16px; font-weight:bold" class="form-control form-control-sm" placeholder="@Html.DisplayFor(model => model.serino)" disabled="disabled">
                                    </div>
                                </div>
                                <div class="input-group input-group-sm">
                                    <label for="inputName" class="col-sm-4 col-form-label">Doğum Tarihi</label>
                                    <div class="col-sm-8">
                                        <input type="text" style="font-size:16px; font-weight:bold" class="form-control form-control-sm" placeholder="@Html.DisplayFor(model => model.dogumtarih)" disabled="disabled">
                                    </div>
                                </div>
                                <div class="input-group input-group-sm">
                                    <label for="inputName" class="col-sm-4 col-form-label">Medeni Hali</label>
                                    <div class="col-sm-8">
                                        <input type="text" style="font-size:16px; font-weight:bold" class="form-control form-control-sm" placeholder="@Html.DisplayFor(model => model.medenihali.medeni_hali)" disabled="disabled">
                                    </div>
                                </div>
                                <div class="input-group input-group-sm">
                                    <label for="inputName" class="col-sm-4 col-form-label">Kan Grubu</label>
                                    <div class="col-sm-8">
                                        <input type="text" style="font-size:16px; font-weight:bold" class="form-control form-control-sm" placeholder="@Html.DisplayFor(model => model.kangrup.kan)" disabled="disabled">
                                    </div>
                                </div>
                                <div class="input-group input-group-sm">
                                    <label for="inputName" class="col-sm-4 col-form-label">Cinsiyet</label>
                                    <div class="col-sm-8">
                                        <input type="text" style="font-size:16px; font-weight:bold" class="form-control form-control-sm" placeholder="@Html.DisplayFor(model => model.telefon)" disabled="disabled">
                                    </div>
                                </div>
                                <div class="input-group input-group-sm">
                                    <label for="inputName" class="col-sm-4 col-form-label">Elbise Beden</label>
                                    <div class="col-sm-8">
                                        <input type="text" style="font-size:16px; font-weight:bold" class="form-control form-control-sm" placeholder="@Html.DisplayFor(model => model.elbisebeden)" disabled="disabled">
                                    </div>
                                </div>


                            </div>
                        </div>
                        <!-- /.tab-pane -->
                        <!-- /.tab-content -->
                    </div><!-- /.card-body -->
                </div>

            </div>
        </div>

    </form>
}